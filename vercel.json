{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "output": "public",
      "command": "pip install -r requirements.txt && flask run --port $PORT"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/app.py", "methods": ["GET", "POST", "PUT", "DELETE"] }
  ],
  "dev": {
    "command": "flask run",
    "port": 5000
  }
}
