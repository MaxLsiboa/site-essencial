{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "output": "public",
      "command": "pip install -r requirements.txt && python app.py"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/app.py", "methods": ["GET", "POST", "PUT", "DELETE"] }
  ],
  "cleanUrls": true
}
